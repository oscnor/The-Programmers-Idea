# Provide operations on fractions

def getNumbers():
  first_number = input("First number: ")
  numbers = [first_number]
  while(True):
    next_number = input("Next number: ")
    if(next_number == ""):
      break
    else:
      numbers.append(next_number)
  return numbers
  
