def multiply(numbers):
    numer = number
    
def divide(numbers):
    numer = number
    
def fractions():
  operation = input("What type of operation do you wish to preform: ")
  numbers = getNumbers()
  while(True):
    operation = input("What type of operation do you wish to preform: ")
    if(operation.upper() == "ADD"):
      add(numbers)
    elif(operation.upper() == "SUBTRACT"):
      subtract(numbers)
    elif(operation.upper() == "MULTIPLY"):
      multiply(numbers)
    elif(operation.upper() == "DIVIDE"):
      divide(numbers)
    else:
      print("Invalid choice")
      continue
    break

fractions()
