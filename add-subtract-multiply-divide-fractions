# Provide operations on fractions
import Fraction from fractions as frac

def getNumbers():
  first_number = input("First number: ")
  numbers = [frac(first_number)]
  while(True):
    next_number = input("Next number: ")
    if(next_number == ""):
      break
    else:
      numbers.append(frac(next_number))
  return numbers
  
